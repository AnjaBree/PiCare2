<resources>

    <!-- Custom style for MaterialCardView -->
    <style name="PiCare.CardView" parent="Widget.MaterialComponents.CardView">
        <!-- Card background color -->
        <item name="cardBackgroundColor">@color/surface</item>

        <!-- Content text color inside the card -->
        <item name="android:textColor">@color/on_surface</item>

        <!-- Card stroke and elevation -->
        <item name="strokeColor">@color/orange_500</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">4dp</item>

        <!-- Rounded corners -->
        <item name="shapeAppearance">@style/PiCare.CardShape</item>
    </style>

    <!-- Custom shape appearance for rounded corners -->
    <style name="PiCare.CardShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

</resources>
